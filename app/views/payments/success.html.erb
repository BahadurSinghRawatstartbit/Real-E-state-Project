<div class="container-fluid py-5">
  <div class="row justify-content-center" style="display:flex;justify-content:center;text-align:center;">
    <div class="col-lg-8 col-md-10">

      <!-- Success Card -->
      <div class="card shadow-lg border-0 rounded-4">
        <div class="card-body p-5 text-center">

          <!-- Success Icon -->
          <div class="mb-4">
            <div class="rounded-circle bg-success text-white d-inline-flex align-items-center justify-content-center"
                 style="width:80px;height:80px;">
              <i class="bi bi-check-lg fs-1"></i>
            </div>
          </div>

          <!-- Title -->
          <h2 class="fw-bold text-success mb-2">
            Payment Successful!
          </h2>

          <p class="text-muted mb-4">
            Thank you for your payment. Your transaction has been completed successfully.
          </p>

          <!-- Transaction Info -->
          <div class="alert alert-light border text-start mb-4">
            <p class="mb-1"><strong>Transaction ID:</strong></p>
            <p class="mb-0 text-break text-muted">
              <%= @payment_intent_id %>
            </p>
          </div>

          <!-- Purchased Properties -->
          <h5 class="fw-semibold mb-3 text-start">
            Properties Purchased
          </h5>

          <ul class="list-group list-group-flush mb-4">
            <% @properties_sold.each do |property| %>
              <li class="list-group-item d-flex justify-content-between align-items-center">
                <span class="fw-medium"><%= property.name %></span>
                <span class="badge bg-primary rounded-pill">
                  ₹<%= number_with_delimiter(property.price) %>
                </span>
              </li>
            <% end %>
          </ul>

          <!-- Actions -->
          <div class="d-flex flex-column flex-sm-row gap-3 justify-content-center">
            <%= link_to "Go to Home", root_path, class: "btn btn-success px-4" %>
            <%= link_to "View Properties", properties_path, class: "btn btn-outline-secondary px-4" %>
          </div>

        </div>
      </div>

    </div>
  </div>
</div>
