                                <label for="email">Mobile Number</label>
                                <%= f.text_field :mobilenumber, class: "form-control", id: "email", required: true %>
                            </div>
                            
                            <div class="text-center">
                                <div class="row">

                                    <div class="col-md-4 col-xs-4"></div>

                                    <div class="col-md-4 col-xs-4"><%= f.submit "Save", class: "btn btn-default" %></div>                                    <div class="col-md-4 col-xs-4"></div>                                        <div>                                    </div>                                    <% end %></div>                                                       </div>                                </div>                                </div>                                </div>                                </div>
