<div class="page-head">
    <div class="container">
        <div class="row">
            <div class="page-head-content" style="display:flex;align-item:center;justify-content:center;">
                <h1 class="page-title"><% if logged_in?  && current_user.admin? %>Create Agent<%else%>Agent New account /Agent Sign in<%end%> </h1>
            </div>
        </div>
    </div>
</div>
<!-- End page header -->

<!-- register-area -->
<div class="register-area" style="background-color: rgb(249, 249, 249);">
    <div class="container"><%= render 'shared/errors', obj: @user %>        <div style="display: flex;justify-content: center; align-items: center;">
            <div class="col-md-6">
                <div class="box-for overflow">
                    <div class="col-md-12 col-xs-12 register-blocks">
                        <h2>New account : </h2>
                        <%= form_with url: signup_agent_path, model: @user, local: true do |f| %>
                            <div class="form-group">
                                <label for="name">Name</label>
                                <%= f.text_field :name, class: "form-control", id: "name", placeholder: "Enter a username", required: true %>

                            </div>
                            <div class="form-group">
                                <label for="email">Email</label>
                                <%= f.text_field :email, class: "form-control", id: "email", required: true %>
                            </div>
                            <div class="form-group">
                                <label for="email">Mobile Number</label>
                                <%= f.text_field :mobilenumber, class: "form-control", id: "email", required: true %>
                            </div>
                            <div class="form-group">
                                <label for="password">Password</label>
                                <%= f.password_field :password, class: "form-control", id: "password", required: true %>

                            </div>
                            <div class="form-group">
                                <label for="password">Confirm Password</label>
                                <%= f.password_field :password_confirmation, class: "form-control", id: "password", required: true %>

                            </div>
                            <div class="text-center">
                                <div class="row">
                                    <div class="col-md-4 col-xs-4"></div>
                                    <div class="col-md-4 col-xs-4">
                                        <%= f.submit "Register", class: "newbtn btn btn-default" %>
                                    </div>                                    
                                    <div class="col-md-4 col-xs-4"></div>  
                                <div>                                    

                            </div>                                    
                                    
                        <% end %>
                    </div> 
                    <% if current_user&.admin? %>                              
                    
                    <%else%>
                        <p>  You already have an existing Agent Account<%= link_to " login", login_agent_path %></p>  
                        <p>  You already have an existing User Account<%= link_to " login", login_path %></p>  
                    <%end%>
                                  
                </div>                                
            </div>                               
        </div>                              
    </div>                              
</div>
 </div>                              
</div>

