<div class="page-head">
    <div class="container">
        <div class="row">
            <div class="page-head-content">
                <h1 class="page-title">Agent Log in </h1>
            </div>
        </div>
    </div>
</div>
<!-- End page header -->

<div class="register-area" style="background-color: rgb(249, 249, 249);">
    <div class="container">
        <% if flash[:danger] || flash[:error] %>
            <div class="alert alert-danger alert-dismissible fade in" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <%= flash[:danger] || flash[:error] %>
                </div>
            <% end %>

            <div style="display: flex;justify-content: center; align-items: center;">
                <div class="col-md-6">

                    <div class="box-for overflow">
                        <div class="col-md-12 col-xs-12 login-blocks">
                            <h2>Login : </h2>
                            <%= form_with(scope: :session, url: login_agent_path, class: "shadow p-3 mb-3  rounded", local: true) do |f| %>
                                <div class="form-group">
                                    <label for="email">Email</label>
                                    <%= f.text_field :email, class: "form-control", id: "email", required: true %>
                                </div>
                                <div class="form-group">
                                    <label for="password">Password</label>
                                    <%= f.password_field :password, class: "form-control", id: "password", required: true %>
                                    </div>                            <div class="text-center">                                <div class="row">                                    <div class="col-md-4 col-xs-4"></div>                                    <div class="col-md-4 col-xs-4"><%= f.submit "Login", class: "btn btn-default" %>                                    </div>                                <div class="col-md-4 col-xs-4"></div>                            </div>                            <p class="text-center mt-3">
                                        you don't have an account 
                                    <%= link_to "signup", signup_agent_path %>
                                </p>
                            </div>

                        <% end %>
                        <br>

                        <h2>Social login :  </h2>

                        <p>
                            <a class="login-social" href="#"><i class="fa fa-facebook"></i>&nbsp;Facebook</a>
                            <a class="login-social" href="#"><i class="fa fa-google-plus"></i>&nbsp;Gmail</a>
                            <a class="login-social" href="#"><i class="fa fa-twitter"></i>&nbsp;Twitter</a>
                        </p>
                    </div>

                </div>
            </div>
        </div>

    </div>
</div>
