

<div class="page-head"> 
    <div class="container">
        <div class="row">
            <div class="page-head-content">
                <div class="adminhead col-md-6">
                    <h1 class="header-connect page-title">üè† RealEstate Admin Panel</h1>
                </div>
                <div class="adminhead col-md-6 ">
                    <h1 class=" header-connect page-title pull-right" >Welcome Admin, <%= current_user.name %></h1>
                </div>
            </div>
        </div>
    </div>
</div>


<br>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <div class="panel panel-primary">
                <div class="panel-heading text-center">Users</div>
                    <div class="panel-body text-center">
                        <h2><%= User.count %></h2>
                        <p>Total Users</p>
                    
                </div>
            </div>
       </div>


        <div class="col-md-3">
            <div class="panel panel-success">
                <div class="panel-heading text-center">Properties</div>
                    <div class="panel-body text-center">
                        <h2><%= Property.count %></h2>
                        <p>Total Listings</p>
                    
                </div>
            </div>
        </div>


        <div class="col-md-3">
            <div class="panel panel-info">
                <div class="panel-heading text-center">Bookings</div>
                    <div class="panel-body text-center">
                        <h2><%= BookingItem.count %></h2>
                        <p>Total Bookings</p>
                    
                </div>
            </div>
        </div>


        <div class="col-md-3">
            <div class="panel panel-warning">
                <div class="panel-heading text-center">Agents</div>
                    <div class="panel-body text-center">
                        <h2><%= User.with_role(:agent).count %></h2>
                        <p>Total Agents</p>
                    
                </div>
            </div>
        </div>
    </div>
    



    <!-- Quick Actions -->
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading"><strong>Quick Actions</strong></div>
                    <div class="panel-body text-center">
                    <a href="<%= users_path %>" class="actionbtn btn btn-warning">üë§ Manage Users</a>
                    <a href="<%= properties_path %>" class="actionbtn btn btn-success">üèò Manage Properties</a>
                    <a href="<%= admin_agentlist_path %>" class="actionbtn btn btn-danger">üë§ Manage Agents</a>
                   
                    <%= link_to "View Bookings", admin_dashboard_booked_properties_path , class: "actionbtn btn btn-success"%>
                    <a href="<%= payments_path%>" class="actionbtn btn btn-info">üì¶ View transaction</a>
                    <a href="/signup/agent" class="actionbtn btn btn-primary">‚ûï Create Agent</a>
                    <a href="/signup" class="actionbtn btn btn-danger">‚ûï Create User</a>
                </div>
            </div>
        </div>
    </div>


    <div class="row">
        
        <div class="col-md-6">
            <div class="panel panel-primary">
                <div class="panel-heading">Recent Users</div>
                <div class="panel-body">
                    <table class="table table-striped">
                        <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Role</th>
                        </tr>
                        <% User.order(created_at: :desc).limit(5).each do |u| %>
                        <tr>
                            <td><%= u.name %></td>
                            <td class="email"><%= u.email %></td>
                            <td><%= u.roles.pluck(:name).join(', ') %></td>
                        </tr>
                        <% end %>
                    </table>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="panel panel-success">
                <div class="panel-heading">Recent Properties</div>
                <div class="panel-body">
                    <table class="table table-striped">
                        <tr>
                        <th>Title</th>
                        <th>Price</th>
                        <th>Status</th>
                        </tr>
                        <% Property.order(created_at: :desc).limit(5).each do |p| %>
                        <tr>
                            <td><%= p.name %></td>
                            <td>‚Çπ <%= p.price %></td>
                            <td><span class="label label-success"><%= p.status %></td></span></td>
                        </tr>
                        <% end %>
                    </table>
                </div>
            </div>
        </div>

    </div>



</div>